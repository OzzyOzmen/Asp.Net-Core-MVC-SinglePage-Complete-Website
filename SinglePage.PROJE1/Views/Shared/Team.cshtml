@using SinglePage.DTO
@model AllTableDTO

@{
    ViewData["Title"] = "Takım Üyeleri";
}
<!-- Takım Üyeleri Başlangıcı -->
<section id="Team" class="mt-5">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.teamsDTOs)
            {
                <div class="col md-3">
                    <div class="card text-center">
                        <div class="card-block">
                            <img src="@Url.Content(item.TeamPhoto)" class="img-fluid rounded-circle my-4">
                            <h3>@item.TeamMemberName @item.TeamMemberSurName</h3>
                            <h5 class="text-muted">@item.TeamTitle</h5>
                            <p class="text-muted">
                                <em>@item.AboutTeamMember</em>
                            </p>
                            <div class="d-flex flex-row justify-content-center">
                                <div class="p-4">
                                    <a href="@item.TeamFacebookLink" target="_blank">
                                        <i class="fab fa-facebook"></i>
                                    </a>
                                </div>
                                <div class="p-4">
                                    <a href="@item.TeamTwitterLink" target="_blank">
                                        <i class="fab fa-twitter"></i>
                                    </a>
                                </div>
                                <div class="p-4">
                                    <a href="@item.TeamLinkedInLink" target="_blank">
                                        <i class="fab fa-linkedin"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<!-- Takım Üyeleri Sonu -->